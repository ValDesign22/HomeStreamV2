{
  "productName": "HomeStream",
  "version": "1.0.0-1",
  "identifier": "fr.valdesign.homestream",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "HomeStream",
        "width": 1280,
        "height": 720
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": false,
        "scope": ["$APPDATA/**", "$APPLOGS/**", "$APPCONFIG/**"]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "createUpdaterArtifacts": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEVBNDY4OUIzMjMzMjIyNTYKUldSV0lqSWpzNGxHNm5jUUdOd3JVOVByaFV0akFlSU0yOHY1TDRBNDNlK3VGcGJNWm5SbjNVWW0K",
      "endpoints": [
        "https://github.com/ValDesign22/homestream_client/releases/latest/download/latest.json"
      ],
      "windows": {
        "installMode": "passive"
      }
    }
  }
}
