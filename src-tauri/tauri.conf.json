{
  "productName": "HomeStream",
  "version": "0.0.0",
  "identifier": "fr.valdesign.homestream",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "visible": false,
        "title": "HomeStream",
        "width": 800,
        "height": 600,
        "center": true
      },
      {
        "label": "splashscreen",
        "url": "/splashscreen",
        "center": true
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": false,
        "scope": ["$APPDATA/**", "$APPLOGS/**", "$APPCONFIG/**"]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
