{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "path:default",
    "event:default",
    "window:default",
    "app:default",
    "image:default",
    "resources:default",
    "menu:default",
    "tray:default",
    "shell:allow-open",
    "http:default",
    {
      "identifier": "http:default",
      "allow": [
        {
          "url": "https://*.themoviedb.org/*"
        }
      ],
      "deny": []
    },
    "fs:default",
    {
      "identifier": "fs:scope",
      "allow": [{
        "path": "$APPCONFIG/*"
      }]
    },
    "fs:allow-appconfig-write-recursive",
    "deep-link:default"
  ]
}